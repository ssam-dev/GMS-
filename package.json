{
  "name": "gms-monorepo",
  "version": "1.0.0",
  "description": "Gym Management System - Monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "dev:all": "concurrently \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "build": "npm run build --workspace=frontend",
    "start": "npm start --workspace=backend",
    "backend:dev": "npm run dev --workspace=backend",
    "frontend:dev": "npm run dev --workspace=frontend",
    "test": "npm run test --workspace=backend",
    "test:watch": "npm run test:watch --workspace=backend",
    "test:coverage": "npm run test:coverage --workspace=backend",
    "seed": "npm run seed --workspace=backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
