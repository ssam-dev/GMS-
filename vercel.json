{
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://backend-u1lb.onrender.com",
    "VITE_API_BASE_URL": "https://backend-u1lb.onrender.com/api"
  },
  "buildIgnore": "git log --oneline -1 | grep -q 'skip build' && exit 0 || exit 1"
}
